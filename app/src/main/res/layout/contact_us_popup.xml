<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <ImageButton
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="#FFFFFF"
                android:src="@drawable/ic_close" />

            <TextView
                android:id="@+id/website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/close"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/ic_website"
                android:text="www.geu.ac.in"
                android:textColor="@color/design_default_color_primary_dark"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/website"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:drawableStart="@drawable/ic_call_dark"
                android:drawablePadding="20dp"
                android:text="+91-135-2643421"
                android:textColor="@color/design_default_color_primary_dark"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/number"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:drawableStart="@drawable/ic_mail"
                android:drawablePadding="20dp"
                android:text="enquiry@geu.ac.in"
                android:textColor="@color/design_default_color_primary_dark"
                android:textStyle="bold" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mail"
                    android:text="GRAPHIC ERA DEEMED TO BE UNIVERSITY\nBell Road, Clement Town Dehradun, Uttarakhand"
                    android:layout_centerHorizontal="true"
                    android:drawableStart="@drawable/ic_location"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:drawablePadding="10dp"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textStyle="bold"/>

        </RelativeLayout>

</androidx.cardview.widget.CardView>